    <title>Film</title>
    <link rel="stylesheet" type="text/css" href="../static/assets/main.css" />
    <link rel="icon" type="image/png" href="../static/assets/logga.png" />
    <script type="module" src="../static/main.js" defer></script>
    <script src="/static/specificScreeningsMoviepage.js" defer></script>
  </head>

  <body>
    <%- include('../views/partials/headerFilm.ejs') %>
    <img
      class="background__raining"
      src="../static/assets/raining-background.jpg"
      alt="Rain falling on a calm city background"
    />
    <main>
      <a href="/filmer">Tillbaka till Filmer</a>
      <article class="movie">
        <h1><%= movie.title %></h1>
        <div class="intro"><%- renderMarkdown(movie.intro) %></div>
        <% if (movie.image) { %>
        <img src="<%= movie.image.url %>" />
        <% } %>
      </article>

      <div><h2>Lägg till filmens betyg. fetch() frontend</h2></div>

      <div>
        <ul id="screening-list"></ul>
      </div>
      <section>
        <h2>Recensioner:</h2>
        <div class="container_reviews"></div>
        <div class="container_reviews_buttons">
          <button class="button" id="previous"><span>Föregående</span></button>
          <button class="button" id="next"><span>Nästa</span></button>
        </div>
      </section>

      <h2>Lägg till skicka in recension. Skicka med fetch() frontend</h2>
    </main>

    <%- include('../views/partials/footerFilm.ejs') %>
    <script type="module" src="../static/reviews.js"></script>
  </body>
</html>
